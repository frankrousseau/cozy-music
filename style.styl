rounded-border()
    -webkit-border-radius: arguments
    -moz-border-radius: arguments
    border-radius: arguments
            
dark-grey = #444
yellow-grey = #f5f0d7
red = #E58067

@font-face
    font-family: title
    src: url('fonts/chunkfive.otf')

@font-face
    font-family: main
    src: url('fonts/district-pro-thin.otf')

html,
body
    height 100%
    width 100%

body
    text-rendering optimizeLegibility
    font-family: main
    background: url(/background.jpg) no-repeat center center fixed 
    -webkit-background-size: cover
    -moz-background-size: cover
    -o-background-size: cover
    background-size: cover

h2
h3
h4
    font-family: main
    font-weight: normal

h3
    padding-left: 10px
    padding-right: 10px
    font-size: 24px
    margin-bottom: 10px
    margin-top: 10px

body,
input
    color #444
    font 300 16px Geneva, Verdana, "Lucida Sans", "Lucida Grande", sans-serif
    line-height 1.2

a,
a:visited
    color #0086cc
    text-decoration none

    &:hover
        text-decoration underline

h1
    font-family: title
    font-weight: normal
    font-size: 48px
    padding-left: 95px

button
    border: 0
    border-radius: 3px
    background-color: dark-grey
    color: white
    padding: 10px
    margin-right: 5px
    font-family: main
    font-size: 22px
    width:  400px
    margin-bottom: 10px

button:hover
    background-color: red

button:active
    background-color: red - 20%
    box-shadow: 2px 2px 2px red - 40% inset

a
button
    cursor: pointer

.text
    font-family: main
    font-size: 20px

.pa2
    padding: 20px

.line
    margin-bottom: 50px

.left-bar
    max-width: 480px
    padding-left: 20px
    padding-right: 20px
    background: #222
    color: #EEE
    opacity: 0.9
    height: auto

.container
    margin-top: 0

.other
    max-width: 480px

.center-text
    text-align: center

@media (max-width: 600px)
    .container
        margin-top: 20px

    .container
        p
            margin: 0

    h1
        padding-left: 0px
        margin-bottom: 0

    .center-text
        text-align: left

    .container
    .other
        padding: 20px

    button 
        width: 280px
        font-size: 18px

