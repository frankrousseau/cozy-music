td.left.state
    #add-to-button.player-button.size-20(title="add to playlist")
        i.icon-plus
    #play-track-button.player-button.size-20(title="queue this song")
        i.icon-share-alt
td.field.title
    input.mousetrap(type="text", value="#{model.title}", readonly)
td.field.artist
    input.mousetrap(type="text", value="#{model.artist}", readonly)
td.field.album
    input.mousetrap(type="text", value="#{model.album}", readonly)
    #play-album-button.player-button.size-20(title="queue this album")
        i.icon-share
td.field.num #{model.track}
td.right.download 
    a(href="tracks/#{model.id}/attach/#{model.slug}",
      target="_blank").player-button.size-20
        i.icon-download
td.right
    #delete-button.player-button.size-20.signal-button(title="delete definitively")
        i.icon-remove
